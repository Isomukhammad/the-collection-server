// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("PGURL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String
  password  String
  role      Role     @default(USER)
  isBlocked Boolean  @default(false)
  isDeleted Boolean  @default(false)

  @@unique([email, isDeleted])
}

enum Role {
  USER
  ADMIN
}